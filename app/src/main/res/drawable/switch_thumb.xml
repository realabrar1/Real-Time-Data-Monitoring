<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <size android:width="26dp"
                android:height="26dp"/>
            <solid android:color="@color/switch_off_thumb"/>
            <stroke android:color="@color/switch_off_thumb_stroke"
                android:width="4dp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <size android:width="26dp"
                android:height="26dp"/>
            <solid android:color="@color/switch_on_thumb"/>
            <stroke android:color="@color/switch_on_track"
                android:width="4dp"/>
        </shape>
    </item>

</selector>


